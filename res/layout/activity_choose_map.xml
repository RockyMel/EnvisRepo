<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/map_by_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/add_map" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose map by name" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/nearest_maps_btn"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@null"
            android:src="@drawable/add_map" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose map by location" 
            android:visibility="gone"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/scan_qr_btn"
            android:layout_width="wrap_content"
       		 android:layout_height="wrap_content"
            android:src="@drawable/ic_qrlauncher" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan qr code" 
            android:visibility="gone"/>
    </TableRow>

    <Button
        android:id="@+id/chooseSensorsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose sensors" 
        android:background="#DEC76D"/>

    <Button
        android:id="@+id/plot_to_map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plot to this map" 
        android:background="#DEC76D"/>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map ID"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/mapIDTV"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/mapNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/mapNotesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:text="TextView" 
            android:visibility="invisible"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mapLocationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />
    </TableRow>

</TableLayout>
<include layout="@layout/for_drawer" />
</android.support.v4.widget.DrawerLayout>