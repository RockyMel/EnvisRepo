 <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@drawable/yellowblack_land">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 
    tools:context=".ChartVisualizationSettingsActivity" >

    <Switch
        android:id="@+id/switchforrealtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="RealTime" 
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TimeFromButton"
        android:layout_marginTop="19dp"
        android:text="Select Sensors for Visualization by Clicking on the Buttons to the Right:" />

    <Button
        android:id="@+id/DateToButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DateFromButton"
        android:layout_alignParentRight="true"
        android:background="@color/yellow"
        android:text="Select Date To" />

    <Button
        android:id="@+id/TimeToButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DateToButton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DateToButton"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/yellow"
        android:text="Select Time To" />

    <Button
        android:id="@+id/DateFromButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/switchforrealtime"
        android:background="@color/yellow"
        android:text="Select Date From" />

    <Button
        android:id="@+id/TimeFromButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/DateFromButton"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/yellow"
        android:text="Select Time From" />

    <Button
        android:id="@+id/SensorsByTypeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TimeToButton"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Sensors By Type" 
         android:background="@color/yellow"       />

    <ListView
        android:id="@+id/chosensensorslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/QR"
        android:layout_alignTop="@+id/SensorsByTypeButton"
        android:layout_toLeftOf="@+id/SensorsByTypeButton" >

    </ListView>

    <Button
        android:id="@+id/SetsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SensorsByTypeButton"
        android:layout_below="@+id/SensorsByTypeButton"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/yellow"
        android:text="Sets of Sensors" />

    <Button
        android:id="@+id/QR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SensorsByTypeButton"
        android:layout_below="@+id/SetsButton"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/yellow"
        android:text="Scan Set QR Code" />

    <Button
        android:id="@+id/VisualizationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/QR"
        android:layout_marginBottom="14dp"
        android:text="Visualization                          ->" 
         android:background="@color/yellow"       />
</RelativeLayout>
 <include layout="@layout/for_drawer" />
</android.support.v4.widget.DrawerLayout> 
